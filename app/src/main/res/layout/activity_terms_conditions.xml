<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="0dp"
        android:background="@color/white"
        android:id="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms and Conditions"
                android:textColor="#03A9F4"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:id="@+id/linear1">

                <TextView
                    android:text="1"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20sp"
                    android:textSize="20sp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:text="Retention of Rights of Ownership/Ban on Infringement"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_below="@id/linear1"
                android:id="@+id/linear2">

                <TextView
                    android:text="2"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20sp"
                    android:textSize="20sp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:text="Retention of the Right to Change the App at Any Time"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_below="@id/linear2"
                android:id="@+id/linear3">

                <TextView
                    android:text="3"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20sp"
                    android:textSize="20sp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:text="Restriction on App Abuses"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_below="@id/linear3"
                android:id="@+id/linear4">

                <TextView
                    android:text="4"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20sp"
                    android:textSize="20sp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:text="Disclaimer of Warranties and Liabilities"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_below="@id/linear4"
                android:id="@+id/linear5">

                <TextView
                    android:text="5"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20sp"
                    android:textSize="20sp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:text="Retention of Right to Terminate/Ban Users"/>

            </LinearLayout>

        </RelativeLayout>






    </ScrollView>

</RelativeLayout>